<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Title Bar -->
    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF5722"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnHamburger"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo12345678"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Mania"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#FF5722"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/menuProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#FF5722"
            android:contentDescription="Profile" />
    </LinearLayout>

    <!-- Scrollable Menu Items -->
    <ScrollView
        android:id="@+id/scrollMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomMenu"
        android:layout_below="@id/titleBar"
        android:padding="8dp">

        <!-- Container for dynamic menu items -->
        <LinearLayout
            android:id="@+id/scrollMenuLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Dynamic menu items will be added here from MainMenuActivity -->
        </LinearLayout>
    </ScrollView>

    <!-- Floating Cart Button -->
    <ImageView
        android:id="@+id/fabCart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="16dp"
        android:padding="5dp"
        android:elevation="8dp"
        android:src="@drawable/ic_cart"
        android:scaleType="centerInside"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Cart" />

</RelativeLayout>