<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    tools:context=".MainMenuActivity">

    <!-- Title Bar -->
    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF5722"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnHamburger"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo12345678"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Mania"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="0dp"
            app:srcCompat="@drawable/ic_signout"
            android:backgroundTint="#FF5722" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/userInfo"
        android:layout_width="match_parent"
        android:layout_below="@id/titleBar"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/userDetailsLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading...."
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDeliveryLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80sp"
                android:text="Delivey Address: Loading...."
                android:textColor="#333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNearestBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nearest Branch: Loading...."
                android:textColor="#FF5722"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Edit Button aligned to the right -->
        <Button
            android:id="@+id/btnEditLocation"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="14dp"
            android:backgroundTint="#FF5722"
            android:text="Edit"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#FF5722">

        <!-- Icons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <ImageButton
                android:id="@+id/imgBtnHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                app:srcCompat="@drawable/ic_home" />

            <ImageButton
                android:id="@+id/imgBtnOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                app:srcCompat="@drawable/ic_order" />

            <ImageButton
                android:id="@+id/imgBtnBranches"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                app:srcCompat="@drawable/ic_branch" />

            <ImageButton
                android:id="@+id/imgBtnProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                app:srcCompat="@drawable/ic_profile" />
        </LinearLayout>

        <!-- Labels Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Home"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Orders"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textBranches"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Branches"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Profile"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Menu Items -->

    <!-- Floating Cart Button -->
    <ScrollView
        android:id="@+id/scrollMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomMenu"
        android:layout_below="@id/userInfo"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:padding="0dp">

        <!-- Container for dynamic menu items -->
        <LinearLayout
            android:id="@+id/scrollMenuLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Dynamic menu items will be added here from MainMenuActivity -->
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/fabCart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="Cart"
        android:elevation="8dp"
        android:focusable="true"
        android:padding="0dp"
        android:background="@drawable/border"
        android:src="@drawable/ic_cart" />

</RelativeLayout>